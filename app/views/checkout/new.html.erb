  <div class="span4 offset1 shipping_address"
    <%= form_for @checkout do |f| %>
      <% if @has_at_least_a_post %>
        <h3>1. ENTER SHIPPING ADDRESS HERE</h3>
        <p><%= f.text_field :address, placeholder: 'Enter your address here', :required => true %></p>
        <p><%= f.text_field 'post_code', placeholder: 'Enter your city here', :required => true %></p>
        <p><%= f.text_field 'city', placeholder: 'Enter your postcode here', :required => true %></p>
      <% end %>
