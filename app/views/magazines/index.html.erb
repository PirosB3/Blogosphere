<%=render 'layouts/header'%>

<div class="fluid-row clearfix magazine_index_container">
	<div class="span3 offset1" id="checkout">
		<h3>CART</h3>
		<div id="basket" data-magazinename="" data-magazinecost="">
		</div>
		<!-- SUBTOTAL: -->
		<div class="subtotal" data-subtotal="0">
		</div>
		<div class="payment_checkout">
      <%= button_to "Proceed to Checkout", new_checkout_path, :id => 'checkout_button', :method => :get %>
		</div>
	</div>
  
  <% @magazine.each do |x| %>
	<div class="span4 magazine_data" data-id="<%=x.id%>"data-price="<%=x.price%>" data-name="<%=x.name%>">
	    <%=image_tag x.image_url, :width => 200 %><br>
	    <div id="mag_name"><%= x.name %> (<%= x.purchase_type%>)</div><br>
	    <div id="mag_price">Â£<%= x.price %></div>
	    <button class="add_to_basket">ADD TO CART</button>
	</div>
	<%end%>
</div>

<script type="text/template" id="cart-template">
  <div class="wrapper" data-cost="{{=price}}" data-magazine-id="{{=id}}">
      <h6 class="magazine_checkout">{{=name}} ({{=purchase_type}})</h6>
			<img class="trash_icon" title="click here to remove from cart" src="http://b.dryicons.com/images/icon_sets/symbolize_icons_set/png/128x128/trash.png" />
  </div>
</script>

<%=render 'layouts/footer'%>
